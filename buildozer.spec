[app]
# (str) Title of your application
title = СемкаLoveМахо

# (str) Package name
package.name = semkalove

# (str) Package domain (use only lowercase letters)
package.domain = org.semka

# (str) Source folder
source.dir = .

# (list) Application requirements
# comma separated e.g. requirements = sqlite3,kivy
# Note: If you have any dependencies or libraries required for your project,
# you can add them here, e.g., kivy, numpy, etc.
requirements = python3,kivy

# (list) Application permissions
# permissions = INTERNET,ACCESS_FINE_LOCATION

# (int) Target Android API (should be 9 or above)
android.api = 29

# (int) Minimum API your APK will support
android.minapi = 21

# (str) Android NDK version
android.ndk = 21b

# (int) Android SDK version
android.sdk = 28

# (bool) Whether to include the ARMv7 architecture
android.arch = armeabi-v7a

# (str) Path to a custom Android NDK
# android.ndk_path = /path/to/ndk

# (bool) Set to True to use the system installed Java
android.use_system_java = False

# (str) Path to a custom Android SDK
# android.sdk_path = /path/to/sdk
